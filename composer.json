{
  "require": {
    "catfan/medoo": "^1.5",
    "guzzlehttp/guzzle": "^6.5",
    "ext-mbstring": "*",
    "ext-libxml": "*",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-intl": "*",
    "philo/laravel-blade": "3.*"
  },
  "scripts": {
