  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "AutoGamesDiscountCreator\\": "inc/"
    }
  },
  "config": {
    "allow-plugins": {
      "kylekatarnls/update-helper": true
    }
  }
